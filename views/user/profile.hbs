<div class="container profile-container">
	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local login</h3>
				<p><strong>mongo id</strong>: {{ user._id }}<p>
				<p>	<strong>User email</strong>: {{ user.email }}<p>
				<p>	<strong>password</strong>: {{ user.password }}</p>
			</div>
		</div>

		<!-- FACEBOOK INFORMATION -->
	    <div class="col-sm-6">
	        <div class="well">
	            <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook login</h3>
	            <p><strong>id</strong>: {{ user.facebook.id }}</p>
	            <p><strong>token</strong>: {{ user.facebook.token }}</p>
	            <p><strong>name</strong>: {{ user.facebook.name }}</p>
	        </div>
	    </div>
	</div>
</div>


<a href="/logout"><button type="button" class="btn btn-success">SingOut</button></a>
